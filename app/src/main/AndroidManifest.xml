<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android121.timecapsule">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_word"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SpotifyActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".testCustomCarouselActivity">
            android:screenOrientation="portrait"
        </activity>
        <activity android:name=".testCarouselActivity">
            android:screenOrientation="portrait"
        </activity>
        <activity
            android:name=".ViewOpenCapsulesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OpenCapsuleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OpenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".YoutubeActivity">
            android:screenOrientation="portrait"
        </activity>
        <activity
            android:name=".ViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateCapsuleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ContributeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".LoginActivity"></activity>
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>